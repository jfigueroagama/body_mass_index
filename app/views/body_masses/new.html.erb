<h1>Set Body Mass Index</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:body_mass, url: body_masses_path) do |f| %>

      <%= f.label :weight %>
      <%= f.number_field :weight, class: 'form-control', step: :any %>

      <%= f.label :height %>
      <%= f.number_field :height, class: 'form-control', step: :any %>
      <br/>
      <%= f.submit "Get Body Mass Index", class: "btn btn-primary" %>
    <% end %>
    <br/>
    <h4>Please provide your Weight in kilograms and your Height in meters</h4>
  </div>
</div>
